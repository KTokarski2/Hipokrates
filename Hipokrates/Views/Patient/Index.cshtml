@model List<Hipokrates.DTOs.Patient.ConsultationDTO>

@{
    Layout = "_Layout";
}
<main>
    @{
        if (Model.Count == 0)
        {
            <div class="consultation-div">
                <h1 class="consultation-text">Nie umówiono żadnej konsultacji</h1>
                <p><a class="consultation-button" href="@Url.Action("Index", "Home")">OK</a></p>
            </div>
        }
        else
        {
            <div class="table-container">
                <table>
                    <thead>
                    <tr>
                        <th>Usługa</th>
                        <th>Data</th>
                        <th>Godzina</th>
                        <th>Szczegóły</th>
                    </tr>
                    </thead>
                    <tbody>
                    @{
                        foreach (var con in Model)
                        {
                            <tr>
                                <td>@con.ServiceName</td>
                                <td>@con.Date</td>
                                <td>@con.Time</td>
                                <td><a href="@Url.Action("Details", "Patient", new { Id = con.Id })" class="icon-link"><span class="material-symbols-outlined">info</span></a></td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        }
    }
</main>